<ui>
    <block className="Intuitions">
		<bind name="controller" value="'lesta.api.UbModController'"/>
		<bind name="var" value="{Intuitions_intuitionsNum: 0}"/>
		<bind name="visible" value="Intuitions_intuitionsNum &gt; 0"/>
		<bind name="stageSize"/>
		<bind name="left" value="stageWidth / 2 + 345"/>
		<bind name="top" value="stageHeight / 2 - 230"/>
		<block>
			<style>
				<position value="absolute"/>
				<hitTest value="false"/>
			</style>
			<block type="text">
				<styleClass value="$MiddleAligned"/>
				<styleClass value="$TextAccentBold"/>
				<style>
					<fontSize value="14"/>
				</style>
				<bind name="text" value="Intuitions_intuitionsNum"/>
			</block>
		</block>
    </block>
</ui>